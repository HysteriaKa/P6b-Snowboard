<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>{% block title %}Snowtricks!{% endblock %}</title>
    {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
    {% block stylesheets %}
    {#{{ encore_entry_link_tags('app') }}#}
    {% endblock %}
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="{{ asset('css/main.css') }}">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-1ycn6IcaQQ40/MKBW2W4Rhis/DbILU74C1vSrLJxCq57o941Ym01SwNsOMqvEBFlcgUa6xLiPY/NS5R+E6ztJQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    {% block javascripts %}
    {#{{ encore_entry_script_tags('app') }}#}
    {% endblock %}
</head>

<body>
    <div class="nav-Bs d-none d-lg-block">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="{{ path('app_home') }}"><img class="logoNav start"
                        alt="Logo de snowtricks" src="{{asset('images/logoNav.jpg')}}"></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="{{ path('app_home') }}">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Tricks</a>
                        </li>
                        <li class="nav-item">
                           {% if app.user %}
                           <a class="nav-link" href="{{ path('app_logout') }}">Log Out</a></li>
                           {% else %}
                           <li class="nav-item">   
                            <a class="nav-link" href="{{ path('app_login') }}">Log In</a></li>
                            <li class="nav-item"> <a class="nav-link" href="{{ path('app_register') }}">Sign in</a> </li>
                            {% endif %}
                       
                    </ul>
                </div>
            </div>
        </nav>
    </div>
    <div class="mobile d-block d-lg-none mab-2">
        <nav class="navbar fixed-bottom navbar-light bg-light">
            <div class="container-fluid">
                <a href="{{ path('app_home') }}"><i class="fa fa-fw fa-home"></i></a>
                <a href="#"><i class="fas fa-bookmark"></i></a>
                {% if app.user %}
                <a href="{{ path('app_logout') }}"><i class="fa fas fa-sign-out-alt"></i></a>
                {% else %}
                <a href="{{ path('app_login') }}"><i class="fas fa-sign-in-alt"></i></a>
                <a href="{{ path('app_register') }}"><i class="fas fa-registered"></i></a>  
                {% endif %}
            </div>
        </nav>
    </div>
    {#<nav class="mb-1 justif-space-between ver-center navbar navbar-expand-lg">

        <a href="{{ path('app_home') }}"><img class="logoNav start" alt="Logo de snowtricks"
                src="{{asset('images/logoNav.jpg')}}"></a>
        <div class="">
            <a href="{{ path('app_home') }}" class= "ml-1">Home</a>
            <a href="#" class= "ml-1">Tricks</a>
            <!-- si connectÃ© sign up si non sign in or register -->
            <a href="{{ path('app_register') }}" class= "ml-1">Sign in</a>
            <a href="#" class= "ml-1 mr-1">Sign up</a></div>
    </nav>#}



    {% block body %}{% endblock %}
</body>

</html>
